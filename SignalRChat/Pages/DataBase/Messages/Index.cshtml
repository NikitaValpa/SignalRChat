@page
@model SignalRChat.Pages.DataBase.Messages.MessageModel
@{
    ViewData["Title"] = "Таблица Messages";
}

<h1>Записи таблицы Messages</h1>

<p>
    <a asp-page="Create">Создать новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MessagesList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MessagesList[0].Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MessagesList[0].SendDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MessagesList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SendDate)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Редактировать</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Детали</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<footer>
    <a asp-area="" asp-page="/DataBase/Index">Вернуться к списку таблиц</a>
</footer>
