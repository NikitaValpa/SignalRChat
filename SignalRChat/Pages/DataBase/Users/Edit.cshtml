@page
@model SignalRChat.Pages.DataBase.Users.EditUserModel

@{
    ViewData["Title"] = "Редактирование базы";
}

    <h1>Редактирование записи базы</h1>

<h4>Таблица Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="getUser.Id" />
            <div class="form-group">
                <label asp-for="getUser.UserName" class="control-label"></label>
                <input asp-for="getUser.UserName" class="form-control" />
                <span asp-validation-for="getUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="getUser.Email" class="control-label"></label>
                <input asp-for="getUser.Email" class="form-control" />
                <span asp-validation-for="getUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернутся к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
