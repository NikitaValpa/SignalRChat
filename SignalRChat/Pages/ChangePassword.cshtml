@page
@model SignalRChat.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Изменение пароля";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Изменение пароля для пользователя @Model.Email</h2>
<form asp-action="OnPostAsync" class="col-auto">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
        <input type="password" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
    </div>
</form>

